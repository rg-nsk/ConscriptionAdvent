                                                          HorizontalContentAlignment="Left" 
                                                          VerticalContentAlignment="Center"
                                                          materialDesign:HintAssist.Hint="{x:Static cards:RelativeInfoCard.RelativeStatusFieldName}" 
                                                          materialDesign:HintAssist.IsFloating="True"
                                                          ItemsSource="{Binding RelativeStatusEnumValues}"
                                                          SelectedItem="{Binding RelativeStatus,
                                                                                 UpdateSourceTrigger=PropertyChanged,
                                                                                 ValidatesOnDataErrors=True}" />
                                            </Grid>
                                        </ContentControl>
                                    </DataTemplate>
                                </TabControl.ContentTemplate>
                            </TabControl>

                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="0.5*" />
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="1" 
                                    Margin="5"
                                    Height="30"
                                    Width="80"
                                    Padding="0"
                                    Style="{DynamicResource MaterialDesignRaisedDarkButton}"
                                    Content="{materialDesign:PackIcon Kind=Plus,Size=25}"
                                    Command="{Binding RecruitCardGroup.ThirdCardGroup.FamilyCard.AddRelativeCommand}" />

                                <Button Grid.Column="2" 
                                    Padding="0"
                                    Margin="5"
                                    Height="30"
                                    Width="80"
                                    Style="{DynamicResource MaterialDesignFlatButton}"
                                    Content="{materialDesign:PackIcon Kind=Minus,Size=25}"
                                    Command="{Binding RecruitCardGroup.ThirdCardGroup.FamilyCard.RemoveRelativeCommand}" />
                            </Grid>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="6*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                    Style="{DynamicResource MaterialDesignFlatButton}"
                    Height="60"
                    Content="{materialDesign:PackIcon Kind=ArrowLeftBold,Size=25}"
                    Command="{x:Static materialDesign:Transitioner.MovePreviousCommand}" />
            </Grid>
        </Grid>
    </materialDesign:ColorZone>
</UserControl>
