<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:VidCoder.Controls"
	xmlns:local="clr-namespace:VidCoder.Themes"
	xmlns:mwt="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero">
    <SolidColorBrush x:Key="WindowBrush" Color="#FFF" />
    <SolidColorBrush x:Key="WindowBrushText" Color="#000" />
    <TextBlock x:Key="WindowBrushMode">Light</TextBlock>
    <Style BasedOn="{StaticResource MaterialDesignTextBox}" TargetType="{x:Type TextBox}">
        <Setter Property="CaretBrush" Value="{DynamicResource PrimaryHueDarkBrush}"/>
    </Style>
</ResourceDictionary>