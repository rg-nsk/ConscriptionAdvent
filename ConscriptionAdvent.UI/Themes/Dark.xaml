<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:VidCoder.Controls"
	xmlns:local="clr-namespace:VidCoder.Themes"
	xmlns:mwt="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero">
    <SolidColorBrush x:Key="WindowBrush" Color="#FF17181A" />
    <SolidColorBrush x:Key="WindowBrushText" Color="#FFCDD1CC" />
    <SolidColorBrush x:Key="WindowBrushKey" Color="#FF17181A" />
    <SolidColorBrush x:Key="WindowTextBrushKey" Color="#FFCDD1CC" />
    <TextBlock x:Key="WindowBrushMode">Dark</TextBlock>
    <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="white"/>
    <Style BasedOn="{StaticResource MaterialDesignTextBox}" TargetType="{x:Type TextBox}">
        <Setter Property="CaretBrush" Value="{DynamicResource PrimaryHueLightBrush}"/>
    </Style>

</ResourceDictionary>